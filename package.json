{
    "name": "test-app-name",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "test": "jest",
        "clean": "rm -rf dist",
        "lint": "eslint . --fix",
        "init": "npm run clean && mkdir dist && cp -R static/. dist/",
        "styles:tmp": "cd dist ; touch styles.css",
        "build": "npm run init && NODE_ENV=production webpack --mode=production",
        "build:dev": "webpack --mode=development",
        "serve": "cd functions ; npm run serve",
        "start:dev": "(npm run serve) & npm run init && (npm run styles:tmp) && webpack-dev-server --mode=development",
        "deploy": "npm run build && firebase deploy",
        "deploy:fe": "npm run build && firebase deploy --only hosting"
    },
    "repository": {
        "type": "git",
        "url": "YOUR_GITHUB_URL"
    },
    "author": "Neil Poulin",
    "license": "ISC",
    "jest": {
        "unmockedModulePathPatterns": [
            "react",
            "enzyme",
            "jest-enzyme"
        ],
        "transform": {
            "^.+\\.jsx$": "babel-jest",
            "^.+\\.js$": "babel-jest"
        },
        "testPathIgnorePatterns": [
            "dist/"
        ],
        "moduleDirectories": [
            "src",
            "node_modules"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "verbose": true,
        "testURL": "http://localhost/"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-jest": "^23.4.2",
        "babel-loader": "^7.1.5",
        "babel-plugin-encapsulate-jsx": "^3.1.0",
        "babel-plugin-jsx-display-if": "^3.0.0",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^1.1.11",
        "jest": "^23.4.2",
        "jest-enzyme": "^6.0.2",
        "node-sass": "^4.9.2",
        "regenerator-runtime": "^0.12.0",
        "webpack": "^4.16.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.4"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "classnames": "^2.2.6",
        "css-encapsulation-loader": "^1.0.0",
        "css-loader": "^1.0.0",
        "dotenv-webpack": "^1.5.7",
        "eslint": "^5.2.0",
        "eslint-plugin-jest": "^21.20.2",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-react": "^7.10.0",
        "firebase": "^5.3.1",
        "immutable": "^3.8.2",
        "progress-bar-webpack-plugin": "^1.11.0",
        "prop-types": "^15.6.2",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-hot-loader": "^4.3.3",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "sass-loader": "^7.0.3",
        "style-loader": "^0.21.0",
        "webpack-hot-middleware": "^2.22.3"
    }
}
